<div class="container">
  <h2 class="title">Edit user</h2>

  <% if @user.errors.any? %>
    <div class="mt">
      <% @user.errors.full_messages.each do |message| %>
        <p class="mb-sm text-red"><%=message%>%</p>
      <% end%>
    </div>
  <% end%>


  <div class="mt">
    <%= form_with model: @user, data: {turbo:false} do |form| %>
      <p> <%= form.label :name, 'Your name' %> </p>
      <p> <%= form.text_field :name, class: 'form-text-field' %> </p>

      <p class="mt"> <%= form.label :nickname, 'Your nickname' %> </p>
      <p> <%= form.text_field :nickname, class: 'form-text-field' %> </p>

      <p class="mt-lg text-sm"> If u dont wanna change password leave these fields empty</p>

      <p class="mt"> <%= form.label :password, 'Your password' %> </p>
      <p> <%= form.password_field :password , class: 'form-text-field' %> </p>

      <p class="mt"> <%= form.label :password_confirmation, 'Your password' %> </p>
      <p> <%= form.password_field :password_confirmation, class: 'form-text-field' %> </p>

      <p class="mt-lg">
        <%= form.submit 'Save changes', class: 'button button-main'%>
        <span class="text-sm"> or <%= link_to 'back', :back%></span>
      </p>
    <%end%>
  </div>

  <div class="mt-lg">
    <%= button_to "delete user", user_path(@user),
      method: :delete,
      form: {data: {turbo_confirm: "u really want to delete ur profile?"}},
      class: "text-red text-sm"%>
  </div>
</div>